<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest ExtensionBundleId="com.expressioncontrol.panel" ExtensionBundleVersion="1.0.0" 
                  ExtensionBundleName="Expression Control" Version="12.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <ExtensionList>
    <Extension Id="com.expressioncontrol.panel" Version="1.0.0" />
  </ExtensionList>
  
  <ExecutionEnvironment>
    <HostList>
      <Host Name="AEFT" Version="[17.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="12.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  
  <DispatchInfoList>
    <Extension Id="com.expressioncontrol.panel">
      <MainPath>./index.html</MainPath>
      <ScriptPath>./jsx/expressionControl.jsx</ScriptPath>
      
      <CEFCommandLine>
        <Parameter>--enable-nodejs</Parameter>
        <Parameter>--mixed-context</Parameter>
      </CEFCommandLine>
      
      <Geometry>
        <Size>
          <Width>600</Width>
          <Height>700</Height>
        </Size>
        <MinSize>
          <Width>400</Width>
          <Height>300</Height>
        </MinSize>
        <MaxSize>
          <Width>1200</Width>
          <Height>1200</Height>
        </MaxSize>
      </Geometry>
      
      <UI>
        <Type>Panel</Type>
        <Menu>Expression Control</Menu>
        <Geometry>
          <Size>
            <Width>600</Width>
            <Height>700</Height>
          </Size>
          <MinSize>
            <Width>400</Width>
            <Height>300</Height>
          </MinSize>
        </Geometry>
        <Icons>
          <Icon Type="Normal">./assets/icon-normal.png</Icon>
          <Icon Type="RollOver">./assets/icon-rollover.png</Icon>
          <Icon Type="DarkNormal">./assets/icon-dark.png</Icon>
          <Icon Type="DarkRollOver">./assets/icon-dark-rollover.png</Icon>
        </Icons>
      </UI>
    </Extension>
  </DispatchInfoList>
  
</ExtensionManifest>
